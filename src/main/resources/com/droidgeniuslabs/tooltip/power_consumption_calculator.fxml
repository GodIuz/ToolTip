<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.droidgeniuslabs.tooltip.Controllers.PowerConsumptionCalculatorController"
      prefHeight="400.0" prefWidth="600.0">
    <Label text="Power Consumption Calculator" style="-fx-font-size: 18px;"/>
    <HBox spacing="10">
        <TextField fx:id="powerInput" promptText="Watt (Ισχύς συσκευής)"/>
        <TextField fx:id="hoursInput" promptText="Ώρες χρήσης"/>
        <TextField fx:id="rateInput" promptText="€/kWh"/>
    </HBox>

    <Button text="Υπολογισμός" onAction="#onCalculatePowerCost"/>
    <Label fx:id="resultLabel"/>
</VBox>
