<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.Label?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="10"
      fx:controller="com.droidgeniuslabs.tooltip.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="aboutLabel" text="About" underline="true" onMouseClicked="#openAboutLink"/>
    <VBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="areaButton" text="Area Converter" textFill="darkred" onAction="#openAreaConverter"/>
        <Button fx:id="bmiButton" text="BMI Calc" textFill="darkred" onAction="#openBMICalc"/>
        <Button fx:id="dataButton" text="Data Converter" textFill="darkred" onMouseClicked="#openDataConverter"/>
    </VBox>
    <VBox spacing="10" alignment="CENTER">
        <Button fx:id="discountButton" text="Discount Calc" textFill="darkred" onAction="#openDiscountCalc"/>
        <Button fx:id="lengthButton" text="Length Converter" textFill="darkred" onAction="#openLengthConverter"/>
        <Button fx:id="massButton" text="Mass Converter" textFill="darkred" onAction="#openMassConverter"/>
        <Button fx:id="numeralSystemButton" text="Numeral System Converter" textFill="darkred" onAction="#openNumeralSystemConverter"/>
    </VBox>
    <VBox alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="speedButton" text="Speed Converter" textFill="darkred" onAction="#openSpeedConverter"/>
        <Button fx:id="temperatureButton" text="Temperature Converter" textFill="darkred" onAction="#openTemperatureConverter"/>
        <Button fx:id="timeButton" text="Time Converter" textFill="darkred" onAction="#openTimeConverter"/>
        <Button fx:id="volumeButton" text="Volume Converter" textFill="darkred" onAction="#openVolumeConverter"/>
    </VBox>
    <Button fx:id="closeButton" text="Close" textFill="darkred" onAction="#closeWindow"/>
</VBox>
