<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx" spacing="10" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.droidgeniuslabs.tooltip.Controllers.SpeedConverter"
      prefHeight="400.0" prefWidth="600.0">

    <Label text="Enter a value :" />
    <TextField fx:id="speedField" promptText="Enter temperature"/>
    <ComboBox fx:id="fromSpeed"/>
    <ComboBox fx:id="toSpeed"/>
    <Label text="To:"/>
    <Button onAction="#handleSpeedConvert" text="Convert" />
    <Label text="Converted Value:" />
    <TextField fx:id="outputField" editable="false" promptText="Converted value will appear here" />

</VBox>
