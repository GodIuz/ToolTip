<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<VBox xmlns="http://javafx.com/javafx" spacing="10" padding="20"
      xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
      fx:controller="com.droidgeniuslabs.tooltip.Controllers.PressureConverter"
      prefHeight="400.0" prefWidth="600.0">
    <Label text="Μετατροπέας Πίεσης" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <TextField fx:id="pressureInput" promptText="Ποσότητα Πίεσης" />

    <HBox spacing="10" alignment="CENTER">
        <ChoiceBox fx:id="pressureFrom" />
        <Label text="➜" />
        <ChoiceBox fx:id="pressureTo" />
    </HBox>

    <Button text="Μετατροπή" onAction="#convertPressure" />

    <Label fx:id="pressureResult" text="Αποτέλεσμα" style="-fx-font-size: 14;" />
</VBox>
