<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox xmlns="http://javafx.com/javafx" spacing="10" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.droidgeniuslabs.tooltip.Controllers.TextBinaryConverter"
      prefHeight="400.0" prefWidth="600.0">
    <Label text="Text â‡„ Binary Converter" style="-fx-font-size: 18px;"/>

    <HBox spacing="10">
        <TextField fx:id="textInput" promptText="Enter Text"/>
        <Button text="Convert to Binary" onAction="#onConvertToBinary"/>
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="binaryInput" promptText="Enter Binary"/>
        <Button text="Convert to Text" onAction="#onConvertToText"/>
    </HBox>

    <Label fx:id="resultLabel"/>
</VBox>
