<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.ProgressIndicator?>
<VBox xmlns="http://javafx.com/javafx" spacing="10" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.droidgeniuslabs.tooltip.Controllers.CurrencyConverter"
      prefHeight="400.0" prefWidth="600.0">
    <Label text="Amount : " />
    <TextField fx:id="amountField" promptText="Enter amount"/>

    <Label text="From Currency : "/>
    <ComboBox fx:id="fromCurrency"/>

    <Label text="To Currency:"/>
    <ComboBox fx:id="toCurrency" />

    <Button text="Convert" onAction="#handleCurrencyConverter" />
    <ProgressIndicator fx:id="loadingIndicator" visible="false" />
    <Label fx:id="resultLabel" text=" "/>
</VBox>
