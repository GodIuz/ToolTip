<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns="http://javafx.com/javafx" spacing="10"
      xmlns:fx="http://javafx.com/fxml" alignment="CENTER"
      fx:controller="com.droidgeniuslabs.tooltip.Controllers.TextCompressor"
      prefHeight="400.0" prefWidth="600.0">
    <Label text="Text Compressor / Decompressor" style="-fx-font-size: 18; -fx-font-weight: bold;" />
    <TextArea fx:id="inputText" promptText="Εισάγετε κείμενο..." prefRowCount="4" />
    <HBox spacing="10">
        <Button text="Compress" onAction="#compressText" />
        <Button text="Decompress" onAction="#decompressText" />
    </HBox>
    <TextArea fx:id="outputText" promptText="Αποτέλεσμα..." prefRowCount="4" />
</VBox>
