<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.droidgeniuslabs.tooltip.Controllers.TicTacToe"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" alignment="CENTER">
            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10px;">
                <Label fx:id="playerXScore" text="Player X: 0" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label fx:id="playerOScore" text="Player O: 0" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Label fx:id="drawScore" text="Draws: 0" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Difficulty:" />
                <ComboBox fx:id="difficultyComboBox" prefWidth="150" />
                <ComboBox fx:id="modeBox" prefWidth="150"/>
                <Button fx:id="restartButton" text="Restart Game" style="-fx-background-color: #ff5555; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    <GridPane fx:id="board" hgap="5" vgap="5" alignment="CENTER">
    </GridPane>
</VBox>
