<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx" spacing="10" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.droidgeniuslabs.tooltip.Controllers.CalendarCalculator"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Ημερολογιακός Υπολογιστής" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <DatePicker fx:id="datePicker" />

    <Button text="Υπολόγισε Ημέρα" onAction="#onCalculateDate" />

    <Label fx:id="resultLabel" style="-fx-font-size: 16px;"/>
</VBox>
