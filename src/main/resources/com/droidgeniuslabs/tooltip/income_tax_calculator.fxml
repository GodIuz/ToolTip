<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<VBox xmlns="http://javafx.com/javafx" spacing="10" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.droidgeniuslabs.tooltip.Controllers.IncomeTaxCalculatorController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
    <Label text="Υπολογιστής Φόρου Εισοδήματος (Ελλάδα)" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TextField fx:id="incomeField" promptText="Ετήσιο Εισόδημα σε €"/>
    <ComboBox fx:id="countryComboBox"/>
    <Button text="Υπολογισμός" onAction="#onCalculate"/>
    <Label fx:id="taxLabel" text="Φόρος Εισοδήματος: "/>
    <Label fx:id="netIncomeLabel" text="Καθαρό Εισόδημα: "/>
</VBox>
